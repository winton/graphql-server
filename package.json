{
  "name": "@fn2/graphql-server",
  "version": "0.0.1",
  "description": "Apollo + Nexus GraphQL server ðŸ•¸",
  "main": "dist/cjs/index.js",
  "scripts": {
    "build": "./bin/build",
    "dev": "ttab 'npx ts-node-dev --respawn --transpileOnly --notify false ./src/dev'",
    "deploy": "npx sls deploy",
    "offline": "npx sls offline",
    "release": "./bin/release",
    "test": "mocha",
    "update": "ncu -u",
    "watch": "ttab 'tsc -b -w'"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/fn2/graphql-server.git"
  },
  "author": "Winton Welsh <mail@wintoni.us>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fn2/graphql-server/issues"
  },
  "homepage": "https://github.com/fn2/graphql-server#readme",
  "devDependencies": {
    "@types/aws-lambda": "8.10.36",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.12",
    "@typescript-eslint/eslint-plugin": "2.8.0",
    "@typescript-eslint/parser": "2.8.0",
    "apollo-server-express": "2.9.12",
    "aws-sdk": "2.578.0",
    "eslint": "6.7.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "expect": "24.9.0",
    "express": "4.17.1",
    "husky": "3.1.0",
    "lint-staged": "9.4.3",
    "mocha": "6.2.2",
    "npm-check-updates": "3.2.1",
    "prettier": "1.19.1",
    "release-it": "12.4.3",
    "semver": "6.3.0",
    "serverless": "1.58.0",
    "serverless-offline": "12.0.3",
    "ts-node-dev": "1.0.0-pre.44",
    "ttab": "0.6.1",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "apollo-server-lambda": "2.9.12",
    "nexus": "0.12.0-rc.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  }
}
